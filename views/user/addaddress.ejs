<%- include("../header.ejs")%> <%- include("../partials/navbar.ejs")%>
<section>
  <div class="container col-10 mt-5">
    <div class="row">
      <div class="col-4">
        <div class="list-group p-5 mt-5">
          <a
            href="#"
            class="list-group-item list-group-item-action pt-3"
            aria-current="true"
          >
            The current link item
          </a>
          <a href="#" class="list-group-item list-group-item-action pt-3"
            >A second link item</a
          >
          <a href="#" class="list-group-item list-group-item-action pt-3"
            >A third link item</a
          >
          <a href="#" class="list-group-item list-group-item-action pt-3"
            >A fourth link item</a
          >
          <a
            class="list-group-item list-group-item-action disabled pt-3"
            aria-disabled="true"
            >A disabled link item</a
          >
        </div>
      </div>
      <div class="col-8 bg-danger-subtle rounded-5">
        <div>
          <span class="display-6 m-3">Add address</span>
        </div>
        <form id="addaddress" method="post" action="/addaddress">
          <table class="m-3">
            <tr class="">
              <td class="col-2 d-table-cell">Type of address</td>
              <td class="col-4 d-table-cell p-3">
                <input
                  type="text"
                  name="typeofaddress"
                  class="form-control-plaintext border-1 border-black text-black"
                />
              </td>
              <td class="d-table-cell">Country</td>
              <td class="d-table-cell">
                <input
                  type="text"
                  name="country"
                  class="form-control-plaintext border-1 border-black text-black"
                />
              </td>
            </tr>
            <tr class="">
              <td class="">State</td>
              <td class="p-3">
                <input
                  type="text"
                  name="state"
                  class="form-control-plaintext border-1 border-black text-black"
                />
              </td>

              <td class="">City</td>
              <td class="">
                <input
                  type="text"
                  name="city"
                  class="form-control-plaintext border-1 border-black text-black"
                />
              </td>
            </tr>
            <tr class="">
              <td class="">Street</td>
              <td class="p-3">
                <input
                  type="text"
                  name="street"
                  class="form-control-plaintext border-1 border-black text-black"
                />
              </td>

              <td class="">Landmark</td>
              <td class="">
                <input
                  type="text"
                  name="landmark"
                  class="form-control-plaintext border-1 border-black text-black"
                />
              </td>
            </tr>
            <tr>
              <td class="">
                <span>Pincode</span>
              </td>
              <td>
                <input
                  type="text"
                  class="form-control-plaintext border-black border-1 ms-3"
                  name="pincode"
                />
              </td>
            </tr>
          </table>
          <div class="d-flex justify-content-end col-10">
            <button type="submit" class="btn btn-success">Save</button>
          </div>
        </form>
      </div>
      <%- include("../footer.ejs")%>
    </div>
  </div>
</section>
