<%- include("../header.ejs")%> <%- include("../partials/navbar.ejs")%>
<section>
   
  <div class="container col-10 mt-5">
    <div class="row text-end m-3">
   
</div>
    <div class="row"><%- include("../partials/usersidebar.ejs")%>
        <div class="col-8 bg-danger-subtle rounded-5">
          <div class="d-flex">
          <% userAddress.map(i=>{%>
            <div class="card m-3" style="width: 24rem;">
                <div class="card-body">
                  <h5 class="card-title"><%=i.typeofaddress %></h5>
                  <p class="card-text">
                    <table class="table">
                      <tr>
                        <td ><span class="pe">Country : </span><%=i.country %></td>
                        <td ><span>State : </span> <%=i.state %></td>
                      </tr>
                      <tr>
                        <td><span>City : </span><%= i.city %></td>
                        <td><span>Street : </span> <%= i.street%> </td>
                      </tr>
                      <tr>
                        <td colspan="2"><span>Landmark : </span> <%= i.landmark %></td>
                      </tr>
                      <tr>
                        <td colspan="2"><span>Pincode : </span> <%= i.pincode %></td>
                        <td></td>
                      </tr>
                      <tr>
                        <td><span >name : </span ><%=i.name %></td>
                        <td><span>mno : </span><%=i.mobileno %></td>
                      </tr>
                      <tr>
                       
                      </tr>
                    </table>
                  </p>
                 <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Edit</button>
                  <a href="/address/delete/<%=i._id%>"><button class="btn btn-danger">Delete</button></a>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form action="/address/edit/<%=i._id%>" method="post">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit address</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <table class="table">
          <tr>
            <td ><span class="pe">Country : </span><input type="text" name="country" default="<%=i.country%>" ></td>
            <td ><span>State : </span> <input type="text" name="state" default="<%=i.state%>" ></td>
          </tr>
          <tr>
            <td><span>City : </span><input type="text" name="city" default="<%=i.city%>" ></td>
            <td><span>Street : </span> <input type="text" name="street" default="<%=i.street%>" > </td>
          </tr>
          <tr>
            <td colspan="1"><span>Landmark : </span><input type="text" name="landmark" default="<%=i.landmark%>" ></td>
            <td colspan="1"><span>Pincode : </span><input type="text" name="pincode" default="<%=i.pincode%>" ></td>
          </tr>
          <tr>
            <td colspan="1"><span>name : </span><input type="text" name="name" default="<%=i.name%>" ></td>
            <td colspan="1"><span>mobileno : </span><input type="text" name="mobileno" default="<%=i.mobileno%>" ></td>
          </tr>
          </table>
       
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">update</button>
      </div>
    </form>
    </div>
  </div>
</div>
                </div>
              </div>
              <%})%>
            </div>
            <div class="d-flex justify-content-end py-3 px-5">
              <div>
                <a href="/addaddress"><button class="btn btn-primary ">
                  Add new address
              </button></a>
              </div>
            </div>
            
            
        </div>
  </div>
</section>
<%- include("../footer.ejs")%>
