<%- include("../../header.ejs") %> <%-
include("../../partials/adminnavbar.ejs")%>
<div class="bg-info-subtle bg-opacity-10 vh-100 d-flex justify-content-center">
  <div style="margin: 4%" class="p-5 bg-light bg-opacity-50 shadow-sm col-md-6">
    <form method="post" action="/admin/addcategory">
      <div>
        <h3 class="h3">Add category</h3>
      </div>
      <div class="form-group mt-2">
        <input
          type="text"
          class="form-control shadow-none"
          name="categoryname"
          placeholder="category name"
        />
      </div>
      <div class="form-group mt-2">
        <textarea
          class="form-control shadow-none"
          name="description"
          placeholder="description"
        ></textarea>
      </div>
      <div class="d-flex mt-3">
        <div class="col-4">
          <label>Visibility</label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input shadow-none"
            type="radio"
            name="isBlocked"
            value="false"
          />
          <label class="form-check-label" for="inlineRadio1">Show</label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input shadow-none"
            type="radio"
            name="isBlocked"
            value="true"
          />
          <label class="form-check-label" for="inlineRadio2">Hide</label>
        </div>
      </div>

      <div class="d-block mt-5">
        <button type="submit" class="btn btn-success">create category</button>
      </div>
    </form>
  </div>
</div>
<%- include("../../footer.ejs") %>
