<%- include("../../header.ejs")%> <%-
include("../../partials/adminnavbar.ejs")%>
<div class="bg-info-subtle bg-opacity-10 d-flex justify-content-center vh-100">
  <div
    style="margin-top: 5%"
    class="p-5 bg-light bg-opacity-50 shadow-sm col-md-8  mb-5 "
  >
    <div class="d-flex justify-content-between">
      <button type="button" class="btn btn-primary disabled">
        Total products
      </button>
      <a href="/admin/addproduct">
        <button type="button" class="btn btn-success">Add products</button></a
      >
    </div>
    <div class="mt-3">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">P.NAME</th>
            <th scope="col">DESCRIPTION</th>
            <th scope="col">CATEGORY</th>
            <th scope="col">PRICE</th>
            <th scope="col">IMAGE</th>
            <th scope="col">ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach((product,i)=>{%>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= product.productName %></td>
            <td><%= product.description %></td>
            <td><%= product.categoryId.categoryName %></td>
            <td><%= product.price %></td>
            <td><img src="/multer/products/<%= product.image[0] %>" alt="" style="height:50px"></td>
              <td>
              <a href="/admin/deleteproduct/<%= product._id%>"><button class="btn btn-sm btn-primary ">delete</button>
              </a>             
               <a href="/admin/editproduct/<%= product._id%>"><button class="btn btn-sm btn-danger ms-2">edit</button></a> 
              </td>
          </tr>
        <%})%>
        </tbody>
      </table>
      </div>
    </div>
  </div>
  <%- include("../../footer.ejs")%>
</div>
