<%- include('header')%> <%- include("./partials/navbar.ejs")%>
<div class="container">
  <div class="row justify-content-center form-container">
    <div class="col-md-6">
      <h2 class="text-center mb-4 alert alert-light mt-3">User Signup</h2>

      <form method="post" action="/signup">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control shadow-none"
            id="name"
            name="name"
            placeholder="Enter your name"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control shadow-none"
            id="email"
            name="email"
            placeholder="Enter your email"
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control shadow-none"
            id="password"
            placeholder="Enter your password"
            name="password"
          />
        </div>
        <div class="mb-3">
          <label for="mobilenumber" class="form-label">Mobile number</label>
          <input
            type="text"
            class="form-control shadow-none"
            placeholder="Enter your mobile no"
            name="mobilenumber"
          />
        </div>
        <div class="mb-3">
          <label for="gender" class="form-label">Gender</label>
          <select class="form-select shadow-none" id="gender" name="gender">
            <option value="" selected>Select gender</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
          </select>
        </div>
        <button type="submit" value="register" class="btn btn-primary">
          Register
        </button>
      </form>
    </div>

    <%- include('footer')%>
  </div>
</div>
